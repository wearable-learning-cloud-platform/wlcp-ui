{
	"_version": "1.12.0",
	"sap.app": {
		"id": "org.wlcp.wlcp-ui",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}"
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		}
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "org.wlcp.wlcp-ui.view.Login",
			"type": "XML",
			"async": true,
			"id": "app"
		},
		"dependencies": {
			"minUI5Version": "1.60.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "org.wlcp.wlcp-ui.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}, {
				"uri" : "css/Login.css"
			}, {
				"uri" : "css/GameEditor.css"
			}, {
				"uri" : "css/VirtualDevice.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "org.wlcp.wlcp-ui.view",
				"controlId": "mainApp",
				"controlAggregation": "pages",
				"async": true
			},
			"routes": [{
				"name": "RouteMainView",
				"pattern": "RouteMainView",
				"target": ["TargetMainView"]
			}, {
				"name": "RouteGameEditorView",
				"pattern": "RouteGameEditorView",
				"target": ["TargetGameEditorView"]
			}, {
				"name": "RouteVirtualDevice",
				"pattern": "RouteVirtualDevice",
				"target": ["TargetVirtualDevice"]
			}],
			"targets": {
				"TargetMainView": {
					"viewType": "XML",
					"viewLevel": 1,
					"viewName": "MainView"
				},
				"TargetGameEditorView": {
					"viewType": "XML",
					"viewLevel": 1,
					"viewName": "GameEditor",
					"id" : "gameEditor"
				},
				"TargetVirtualDevice": {
					"viewType": "XML",
					"viewLevel": 1,
					"viewName": "VirtualDevice"
				}
			}
		}
	}
}
