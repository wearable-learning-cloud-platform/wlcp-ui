<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc">
	
	<Dialog id="keyboardInputDialog" title="{i18n>gameEditor.inputTransition.keyboardInput.configure}" contentWidth="50%" contentHeight="50%">
		<buttons>
			<Button text="{i18n>button.accept}" type="Accept" press="closeKeyboardInput"/>
			<Button text="{i18n>button.cancel}" type="Reject" press="closeDialog"/>
		</buttons>
		<FlexBox alignItems="Start" justifyContent="Center">
			<items>
				<Text text="{i18n>gameEditor.inputTransition.keyboardInput.help}"/>
			</items>
		</FlexBox>
		<FlexBox alignItems="Start" justifyContent="Center">
			<items>
				<Input id="keyboardInput" placeholder="{i18n>gameEditor.inputTransition.keyboardInput.placeHolder}"></Input>
			</items>
		</FlexBox>
	</Dialog>
</core:FragmentDefinition>