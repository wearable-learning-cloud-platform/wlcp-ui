<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="debuggerListPopover"
		title="Currently Open Debuggers"
		class="sapUiContentPadding"
		placement="Bottom">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="closeDebugger"
					text="Close All Debuggers"
					press="closeAllDebuggers"
					icon="sap-icon://decline"
					type="Reject" />
			</OverflowToolbar>
		</footer>
			<SelectList
					items="{path: '/debuggers'}" itemPress="debuggerListPopover">
					<core:Item key="{key}" text="{text}" />
				</SelectList>
	</Popover>
</core:FragmentDefinition>
